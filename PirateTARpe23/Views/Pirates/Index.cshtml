@model IEnumerable<PirateTARpe23.Models.Pirates.PirateIndexViewModel>

@{
    int rowNum = 1;
    int currentRow = 1;
    int currentTile = 1;
    int tilesInRow = 6;
}
    <div>
        <a asp-action="Create" asp-asp-controller="Pirates" class="btn btn-primary">Summon a pirate</a>
    </div>

    <div class="h1">Your pirate:</div>
    <form method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    @*Add images here as well*@
                    <th scope="col">#</th>

                    <th scope="col">Name</th>

                    <th scope="col">Health</th>

                    <th scope="col">Hunger</th>

                    <th scope="col">Thirst</th>

                    <th scope="col">Level</th>

                    <th scope="col">XP</th>

                    <th scope="col">Admin Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Any() != null)
            {
                foreach (var pirata in Model)
                {
                    <tr>
                        @*here too*@
                        <td>@rowNum</td>

                        <td>@pirata.Name</td>

                        <td>@pirata.Health</td>

                        <td>@pirata.HungerLevel</td>

                        <td>@pirata.ThirstLevel</td>

                        <td>@pirata.Level</td>

                        <td>@pirata.XP</td>

                        <td>
                            <a asp-action="Details" asp-controller="Pirates" asp-route-id="@pirata.ID" class="btn btn-info">Details</a>
                            <br />
                            <a asp-action="Update" asp-controller="Pirates" asp-route-id="@pirata.ID" class="btn btn-info">Configure</a>
                            <br />
                            <a asp-action="Delete" asp-controller="Pirates" asp-route-id="@pirata.ID" class="btn btn-info">Delete</a>
                        </td>
                    </tr>
                    rowNum++;
                }
            }
            </tbody>
        </table>
    </form>